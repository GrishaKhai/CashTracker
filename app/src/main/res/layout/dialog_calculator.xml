<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.dialog.calculator.CalculatorDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTotalValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="8"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:minLines="1"/>

            <ImageView
                android:id="@+id/ivBackspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/backspace" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayoutEditArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDivisionOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="/"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputOneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="1"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputTwoNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="2"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputThreeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="3"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMultiplicationOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="*"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputFourNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="4"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputFiveNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="5"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputSixNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="6"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDifferenceOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="-"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputSevenNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="7"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputEightNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="8"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputNineNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="9"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSumOperation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="+"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="."
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInputZeroNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCalculate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/btn_color_in_editor"
                    android:fontFamily="sans-serif-black"
                    android:text="OK"
                    android:textColor="@color/text_color_in_editor"
                    android:textSize="28dp"
                    app:cornerRadius="0dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>